<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
    <item name="android:textViewStyle">@style/OpenSansTextViewStyle</item>
  </style>

  <style name="OpenSansTextViewStyle">
    <item name="android:fontFamily">@font/open_sans</item>
  </style>

  <style name="LocationButton" parent="AppTheme">
    <item name="android:layout_width">56dp</item>
    <item name="android:layout_height">@dimen/action_button_radius</item>
    <item name="android:layout_margin">16dp</item>
    <item name="android:layout_gravity">bottom|end</item>
    <item name="android:src">@drawable/locate</item>
    <item name="backgroundTint">@color/beta</item>
    <item name="android:tint">#fff</item>
    <item name="elevation">@dimen/action_button_elevation</item>
    <item name="layout_anchorGravity">bottom|end|right</item>
  </style>

  <style name="BottomSheet" parent="AppTheme">
    <item name="android:background">@android:color/transparent</item>
    <item name="elevation">@dimen/bottom_sheet_elevation</item>
    <item name="behavior_hideable">true</item>
    <item name="behavior_peekHeight">52dp</item>
    <item name="layout_behavior">@string/bottom_sheet_behavior</item>item>
  </style>

  <style name="RouteInfoBackground" parent="AppTheme">
    <item name="android:background">@color/colorRouteDirectionBg</item>
  </style>

  <style name="RouteText" parent="AppTheme">
    <item name="android:textColor">@color/colorRouteText</item>
    <item name="android:textStyle">bold</item>
  </style>

  <style name="NameText" parent="AppTheme">
    <item name="android:singleLine">true</item>
    <item name="android:scrollHorizontally">true</item>
    <item name="android:marqueeRepeatLimit">marquee_forever</item>
    <item name="android:focusable">false</item>
    <item name="android:ellipsize">marquee</item>
  </style>

  <style name="TimeText" parent="AppTheme">
    <item name="android:textColor">#000</item>
    <item name="android:textSize">24sp</item>
    <item name="android:gravity">center</item>
  </style>

  <style name="DirectionText" parent="AppTheme">
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">#999999</item>
    <item name="android:textSize">@dimen/direction_text_size</item>
  </style>

  <style name="TimeDots" parent="AppTheme">
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginLeft">@dimen/schedule_card_time_dots_margin</item>
    <item name="android:layout_marginRight">@dimen/schedule_card_time_dots_margin</item>
  </style>

  <style name="ScheduleCard" parent="CardView">
    <item name="android:layout_height">80dp</item>
  </style>

  <style name="StopIdInput" parent="AppTheme">
    <item name="android:ems">10</item>
    <item name="android:background">#fff</item>
    <item name="android:textSize">@dimen/stop_id_input_textSize</item>
    <item name="android:padding">@dimen/stop_id_input_padding</item>
    <item name="android:queryHint">@string/stop_id_hint</item>
    <item name="android:imeOptions">flagNoExtractUi</item>
    <item name="android:iconifiedByDefault">false</item>
  </style>

  <style name="StatusLine" parent="AppTheme">
    <item name="android:textColor">@color/colorRouteText</item>
    <item name="android:visibility">gone</item>
    <item name="android:gravity">center</item>
    <item name="android:paddingTop">5dp</item>
    <item name="android:paddingBottom">5dp</item>
    <item name="android:layout_alignParentBottom">true</item>
  </style>

</resources>
