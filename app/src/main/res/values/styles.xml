<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <!-- Time text style. -->
  <style name="TimeText" parent="AppTheme">
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">@color/colorTimeText</item>
    <item name="android:textSize">@dimen/card_fontSize_large</item>
    <item name="android:gravity">center</item>
  </style>

  <!-- Route text style. -->
  <style name="RouteText" parent="AppTheme">
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:textColor">@color/colorRouteText</item>
    <item name="android:textSize">@dimen/card_fontSize_large</item>
  </style>

  <!-- Direction text style. -->
  <style name="DirectionText" parent="AppTheme">
    <item name="android:textAllCaps">true</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:textColor">@color/colorDirectionText</item>
    <item name="android:textSize">@dimen/card_fontSize_extra_small</item>
  </style>

  <!-- Name text style. -->
  <style name="NameText" parent="AppTheme">
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">center_horizontal</item>
    <item name="android:textColor">@color/colorNameText</item>
    <item name="android:textSize">@dimen/card_fontSize_small</item>
  </style>

  <!-- Time dots style. -->
  <style name="TimeDots" parent="AppTheme">
    <item name="android:layout_gravity">center</item>
    <item name="android:layout_marginLeft">5dp</item>
    <item name="android:layout_marginRight">5dp</item>
  </style>

  <!-- Card style. -->
  <style name="ScheduleCard" parent="CardView">
    <item name="cardCornerRadius">@dimen/card_corner_radius</item>
    <item name="android:layout_height">@dimen/card_height</item>
    <item name="android:layout_margin">4dp</item>
  </style>

  <!-- Route/direction layout style. -->
  <style name="RouteDirection" parent="AppTheme">
    <item name="android:background">@color/colorRouteDirectionBg</item>
  </style>

  <!-- Stop id input style. -->
  <style name="StopIdInput" parent="AppTheme">
    <item name="android:ems">10</item>
    <item name="android:background">#fff</item>
    <item name="android:textSize">@dimen/stop_id_input_textSize</item>
    <item name="android:padding">@dimen/stop_id_input_padding</item>
    <item name="android:queryHint">@string/stop_id_hint</item>
    <item name="android:imeOptions">flagNoExtractUi</item>
    <item name="android:iconifiedByDefault">false</item>
  </style>

  <style name="StatusLine" parent="AppTheme">
    <item name="android:textColor">@color/colorRouteText</item>
    <item name="android:visibility">gone</item>
    <item name="android:gravity">center</item>
    <item name="android:paddingTop">5dp</item>
    <item name="android:paddingBottom">5dp</item>
    <item name="android:layout_alignParentBottom">true</item>
  </style>

</resources>
